<h1>投稿一覧</h1>

 <table>
  <tr>
    <th>ユーザー名</th> 
    <th>内容</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.user.name %></td> 

      <td><%= article.content %></td>
      <td><%= link_to '詳細', article_path(params[:id]) %></td>
      <td><%= link_to '編集', edit_article_path(params[:id])%></td>
      <td><%= link_to '削除', article_path, method: :delete %></td> 
    </tr>
  <% end %>
</table> 

<br>

<%= link_to '新規投稿', new_article_path %>
<h1>確認画面</h1>

<div class = "container">
  <%= form_with(model: @article, url:articles_path, local: true) do |f| %>
    <p>内容：<%= @article.content %></p>
    <!--確認画面でアップロードした画像を表示させるための記述-->
    <p>画像：<%= image_tag(@article.image.url) if @article.image && @article.image.url %></p>
</div>
    
    <%= f.hidden_field :content %>
    <%= f.hidden_field :image_cache %>
    <%= f.submit '投稿する' %>
  <% end %>

<%= form_with(model: @article, url:new_article_path, local: true, method:"get") do |f| %>
  <%= f.hidden_field :image_cache %>
  <%= f.submit '戻る', name: 'back' %>
<% end %>